<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ScrollPane?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.proyectofinalsemestre4topicosavanzadosdeprogramacion.controllers.HomeController"
      style="-fx-background-color: white"
>

    <ScrollPane fitToWidth="true" style="-fx-background-color: white">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <GridPane alignment="BASELINE_CENTER" style="-fx-background-color: white" vgap="50">
            <ImageView fx:id="homeImage" fitHeight="1200.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true"
                       GridPane.columnIndex="0"/>
            <VBox GridPane.columnIndex="1">
                <VBox alignment="CENTER">
                    <Text style="-fx-font-size: 70px; -fx-fill: #1A0E91;" text="MOVE IT NOW!"/>
                </VBox>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <VBox style="-fx-padding: 20px">
                    <Label style="-fx-font-size: 20px" alignment="CENTER" text="✔ Transporte de carros"/>
                    <Label style="-fx-font-size: 20px" text="✔ Transporte de muebles de casa"/>
                    <Label style="-fx-font-size: 20px" text="✔ Transporte de oficinas"/>
                    <Label style="-fx-font-size: 20px" text="✔ Empacadores y transportistas"/>
                </VBox>
                <VBox alignment="CENTER">
                    <Button text="Solicitar ahora" styleClass="btn-primary"/>
                </VBox>
            </VBox>

            <HBox GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" alignment="CENTER">
                <Text text="Captura tu solicitud" style="-fx-font-size: 30px;"/>
            </HBox>

            <VBox GridPane.columnIndex="0" GridPane.rowIndex="2">
                <Label style="-fx-font-size: 20px" text="✔ Rápido"/>
                <Label style="-fx-font-size: 20px" text="✔ Fácil"/>
                <Label style="-fx-font-size: 20px" text="✔ Sin registrarte"/>
                <Label style="-fx-font-size: 20px" text="✔ Sin spam"/>
            </VBox>

            <VBox GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 20px">
                <Label text="1. Da click en el botón de solicitud en la parte superior."/>
                <Label text="2. Llena el formulario con los datos que se piden."/>
                <Label text="3. ¡Mueve todo lo que necesites!"/>
            </VBox>

            <HBox GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" alignment="CENTER">
                <Text text="Contáctanos" style="-fx-font-size: 30px;"/>
            </HBox>

            <ImageView fx:id="contactImage" fitHeight="1000.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true"
                       GridPane.columnIndex="0" GridPane.rowIndex="4"/>

            <VBox GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 20px;" alignment="CENTER_LEFT">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Label text="1. Da click en el botón de contacto."/>
                <Label text="2. Llena el formulario con los datos que se piden."/>
                <Label text="3. Te contactaremos lo más pronto posible"/>
            </VBox>

        </GridPane>
    </ScrollPane>
</VBox>
